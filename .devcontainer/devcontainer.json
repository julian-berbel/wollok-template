{
  "name": "Wollok",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "appPort": ["3456:3000"],
  "customizations": {
    "vscode": {
      "extensions": [
        "uqbar.wollok-lsp-ide",
        "uqbar.wollok-highlight",
        "jebbs.plantuml"
      ],
      "settings": {
        "wollokLSP.cli-path": "/usr/local/bin/wollok",
        "plantuml.exportOutDir": ".",
        "plantuml.exportSubFolder": false,
        "plantuml.jar": "/usr/local/bin/plantuml.jar",
        "plantuml.render": "Local",
        "plantuml.exportFormat": "png"
      }
    }
  }
}
